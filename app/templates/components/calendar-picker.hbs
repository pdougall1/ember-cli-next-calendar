<div id='next-calendar' class='next-calendar-picker'>
  <ul class="calendar-rows">
    <li class="calendar-row title">
      <ul>
        {{!-- <li class='calendar-arrow-button' {{!action 'previousMonth'}}><</li> --}}
        <li><h1 class='human-date'>{{currentMonthHumanReadable}}</h1></li>
        <li class='calendar-arrow-button next' {{action 'nextMonth'}}>></li>
      </ul>
    </li>
    <li class="calendar-row day-header">
      <ul>
        <li class="day">
          <span>Sun</span>
        </li>
        <li class="day">
          <span>Mon</span>
        </li>
        <li class="day">
          <span>Tue</span>
        </li>
        <li class="day">
          <span>Wed</span>
        </li>
        <li class="day">
          <span>Thu</span>
        </li>
        <li class="day">
          <span>Fri</span>
        </li>
        <li class="day">
          <span>Sat</span>
        </li>
      </ul>
    </li>

    {{#each week in currentMonth}}
      <li class="calendar-row week">
        <ul>
        {{#each day in week}}
          <li class='day'>{{day.ofMonth}}</li>
        {{/each}}
        </ul>
      </li>
    {{/each}}
  </ul>
</div>
